<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/choose_image_take"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_trans_divider"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/common_title"
        android:textSize="16dp" />

    <include
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/choose_image_system"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_trans_divider"
        android:gravity="center"
        android:text="从手机相册选取"
        android:textColor="@color/common_title"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/common_background" />

    <TextView
        android:id="@+id/choose_image_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_trans_divider"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_red_normal"
        android:textSize="16dp" />

</LinearLayout>