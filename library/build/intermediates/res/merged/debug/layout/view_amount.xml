<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:background="@drawable/back_white_rec_round"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/product_count_delete"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_trans_divider"
        android:padding="6dp"
        android:src="@drawable/img_sjoppingcart_reduce"
        android:scaleType="fitCenter"/>

    <include
        layout="@layout/include_line"
        android:layout_width="1px"
        android:layout_height="match_parent"/>

    <EditText
        android:id="@+id/product_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#232323"
        android:inputType="number"
        android:text="1"
        android:enabled="false"
        android:background="@null"
        android:textSize="16sp" />

    <include
        layout="@layout/include_line"
        android:layout_width="1px"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/product_count_add"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_trans_divider"
        android:src="@drawable/img_sjoppingcart_add"
        android:padding="6dp"
        android:scaleType="fitCenter"/>

</LinearLayout>