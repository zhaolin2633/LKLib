<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.uuzuche.lib_zxing.view.ViewfinderView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_corner_color="@color/common_main"
        app:inner_corner_length="20dp"
        app:inner_corner_width="3dp"
        app:inner_height="230dp"
        app:inner_margintop="150dp"
        app:inner_scan_bitmap="@mipmap/icon_capture_sao"
        app:inner_scan_iscircle="false"
        app:inner_scan_speed="30"
        app:inner_width="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:text="将二维码放入框内即可自动扫描"
        android:textColor="@color/white"/>


</FrameLayout>