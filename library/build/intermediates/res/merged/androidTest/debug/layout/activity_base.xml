<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_background"
              android:orientation="vertical">

    <cn.app.library.widget.CustomTitlebar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_button_image="@mipmap/img_cmmon_back"
        app:title_background="@color/white"
        app:title_textColor="@color/color_1c1c1c"
        app:title_textSize="18dp"/>

    <include layout="@layout/fragment_base_loading"/>

    <ViewStub
        android:id="@+id/base_activity_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ViewStub
        android:id="@+id/base_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>