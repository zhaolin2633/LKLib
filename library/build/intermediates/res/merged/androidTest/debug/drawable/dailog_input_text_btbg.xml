<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" />

            <solid android:color="#f7f7f7" />

            <stroke android:width="0px" android:color="#F7F7F7" android:dashGap="0dp" android:dashWidth="0dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" />

            <solid android:color="#10000000" />

            <stroke android:width="0px" android:color="#10000000" android:dashGap="0dp" android:dashWidth="0dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>

</selector>